<body>
    <div id="container">
        <h1>Can you make a gf for me in your frnds? <span class="emoji">ü•∫üòî‚òπÔ∏è</span></h1>
        <button id="yesButton">Yes</button>
        <button id="noButton">No</button>
    </div>

    <script>
        let clickCount = 0;
        const maxShifts = 500;  // Maximum number of times the 'No' button will move

        document.getElementById('yesButton').addEventListener('click', function() {
            alert('Thank you, You are my best sisterüòò!');
        });

        document.getElementById('noButton').addEventListener('click', function() {
            if (clickCount < maxShifts) {
                shiftNoButton();
                clickCount++;
            }
        });

        function shiftNoButton() {
            const noButton = document.getElementById('noButton');
            const container = document.getElementById('container');
            const maxX = window.innerWidth - noButton.offsetWidth;
            const maxY = window.innerHeight - noButton.offsetHeight;
            const randomPosition = () => {
                return {
                    x: Math.random() * maxX,
                    y: Math.random() * maxY
                };
            };

            function getRandomPosition() {
                const { x, y } = randomPosition();
                noButton.style.left = `${x}px`;
                noButton.style.top = `${y}px`;
            }

            getRandomPosition();
        }
    </script>
